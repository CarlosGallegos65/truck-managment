extends ../layout/index 
block content 
    
    div(class="container max-w-md mx-auto px-2")

        h1(class="text-3xl my-8 font-extrabold text-center") Truck 
            span(class="font-normal") Management
        h2(class="text-center text-2xl font-extrabold mb-5") #{title}

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg

        div(class="bg-white rounded-md px-8 py-5 border")
            form(class="space-y-5" action='/auth/register' method="post")
                
                input(type="hidden" name="_csrf" value=csrfToken)

                div 
                    label(for="name" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Name
                    input(type='text' name='name' placeholder='Name' value=user?user.name:"" class="block border border-grey-light w-full p-3 rounded")
                
                div 
                    label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Email
                    input(type='email' name='email' placeholder='Email' value=user?user.email:"" class="block border border-grey-light w-full p-3 rounded")
                
                div 
                    label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Password
                    input(type='password' name='password' placeholder='Password' class="block border border-grey-light w-full p-3 rounded")
                
                div 
                    label(for="repeat_password" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Confirm Password
                    input(type='password' name='repeat_password' placeholder='Confirm Password' class="block border border-grey-light w-full p-3 rounded")

                input(type="submit", value="Create Account" class="uppercase bg-slate-900 cursor-pointer rounded py-2 px-3 text-white font-bold w-full")
                
                div(class="flex items-center justify-between")
                    a(href="/auth/login" class="text-gray-700") Log In
                    a(href='/auth/forgot-password' class="text-gray-700") Forgot your password?