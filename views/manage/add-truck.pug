extends ../layout/index 
block styles 
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content=csrfToken)
block content 

    h2(class="text-center py-5 font-extrabold text-2xl") #{title}

    div(class="container mx-auto px-2")
        div(class="flex flex-col items-center")
            if errors 
                div(class="w-full md:w-2/5 mx-auto my-10")
                    each error in errors 
                        p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg

            form(class="w-full md:w-2/5 space-y-5" action=`/manage/add-truck`, method="post") 
                input(type="hidden" name="_csrf" value=csrfToken)

                div 
                    label(for="mark" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Brand
                    input(class="block border border-grey-light w-full py-3 px-5 rounded-full" type='text' name='brand' placeholder='Brand' value=truck?truck.brand:"")
                
                div 
                    label(for="model" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Model
                    input(class="block border border-grey-light w-full py-3 px-5 rounded-full" type='text' name='model' placeholder='Model' value=truck?truck.model:"")
                
                div 
                    label(for="year" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Year
                    input(class="block border border-grey-light w-full py-3 px-5 rounded-full" type='text' name='year' placeholder='Year' value=truck?truck.year:"")

                div 
                    label(for="plate" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Plate
                    input(class="block border border-grey-light w-full py-3 px-5 rounded-full" type='text' name='plate' placeholder='Plate' value=truck?truck.plate:"")


                input(class="uppercase bg-slate-900 cursor-pointer rounded-full py-2 px-3 text-white font-bold w-full" type="submit", value="Add Vehicle")
                


block scripts
    script(src="/js/aside.js")